<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <LinearLayout
        android:id="@+id/incoming_message_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="72dp"
        android:gravity="start"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/sender_avatar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:background="@color/secondary"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"
            tools:src="@tools:sample/avatars"
            tools:visibility="visible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bubble_incoming"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/sender_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textAppearance="@style/TextAppearance.Brus.Caption"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="John Doe"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/incoming_message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Brus.Body"
                android:textColor="@color/text_incoming_light"
                android:textIsSelectable="true"
                tools:text="Hey! How are you doing today? This is a longer message to test wrapping." />

            <TextView
                android:id="@+id/incoming_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="4dp"
                android:textAppearance="@style/TextAppearance.Brus.Caption"
                android:textColor="@color/text_caption_light"
                android:textSize="11sp"
                tools:text="12:34" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/outgoing_message_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:gravity="end"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bubble_outgoing"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/outgoing_message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Brus.Body"
                android:textColor="@color/text_outgoing_light"
                android:textIsSelectable="true"
                tools:text="I'm doing great, thanks! How about you?" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/outgoing_message_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:textAppearance="@style/TextAppearance.Brus.Caption"
                    android:textColor="@color/text_outgoing_light"
                    android:textSize="11sp"
                    android:alpha="0.7"
                    tools:text="12:35" />

                <ImageView
                    android:id="@+id/message_status"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:alpha="0.7"
                    android:src="@drawable/ic_check"
                    app:tint="@color/text_outgoing_light" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>